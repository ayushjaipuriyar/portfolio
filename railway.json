{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node services/voice-agent/dist/index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "VOICE_AGENT_STT_PROVIDER": "assemblyai",
        "VOICE_AGENT_LLM_MODEL": "gpt-4o-mini",
        "VOICE_AGENT_TTS_PROVIDER": "openai"
      }
    }
  }
}
